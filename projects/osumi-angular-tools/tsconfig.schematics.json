{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/schematics",
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "schematics/**/*.ts"]
}
