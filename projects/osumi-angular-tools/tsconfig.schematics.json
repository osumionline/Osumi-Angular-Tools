{
  "extends": "./tsconfig.lib.json",
  "compilerOptions": {
    "outDir": "./dist/schematics",
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["schematics/**/*.ts"]
}
